<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background"> <!--background of seekbar-->
        <shape>
            <stroke android:width="12dp" android:color="@android:color/transparent"/>
            <corners android:radius="80dp" />
            <solid android:color="#a1a1a1"/>
        </shape>
    </item>
    <item android:id="@android:id/progress"> <!--progress color-->
        <clip>
            <shape>
                <stroke android:width="12dp" android:color="@android:color/transparent"/>
                <corners android:radius="80dp" />
                <gradient
                    android:angle="270"
                    android:startColor="@color/purple_700"
                    android:endColor="#813B15"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress"> <!--secondaryProgress color-->
        <clip>
            <shape>
                <stroke android:width="12dp" android:color="@android:color/transparent"/>
                <corners android:radius="80dp" />
                <gradient
                    android:angle="270"
                    android:startColor="@color/purple_700"
                    android:endColor="#813B15"/>
            </shape>
        </clip>
    </item>
</layer-list>